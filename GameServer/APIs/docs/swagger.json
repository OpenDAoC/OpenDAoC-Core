          "relic"
        ],
        "summary": "/relic",
        "description": "Returns the status of all relics <br><br>[cache 1 min]",
        "operationId": "getRelicStatus",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
