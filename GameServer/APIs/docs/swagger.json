    "/news/all": {
      "get": {
        "tags": [
          "news"
        ],
        "summary": "/news/all",
        "description": "Returns the last 100 in-game server news <br><br>[cache 2 min]",
        "operationId": "getAllNews",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/newsEntry"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/news/realm/{realm}": {
      "get": {
        "tags": [
          "news"
        ],
        "summary": "/news/realm/{realm}",
        "description": "Returns the last 100 in-game server news for a given realm <br><br>[cache 2 min]",
        "operationId": "getRealmNews",
        "parameters": [
          {
            "name": "realm",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "1",
                "2",
                "3"
              ]
            },
            "description": "Enums:\n * 1 - Albion\n * 2 - Midgard\n * 3 - Hibernia\n"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/newsEntry"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/news/type/{type}": {
      "get": {
        "tags": [
          "news"
        ],
        "summary": "/news/type/{type}",
        "description": "Returns the last 100 in-game server news for a given type <br><br>[cache 2 min]",
        "operationId": "getTypeNews",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "0",
                "1",
                "2"
              ]
            },
            "description": "Enums:\n * 0 - RvR\n * 1 - PlayerRP\n * 2 - PlayerXP\n"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/newsEntry"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://api.atlasfreeshard.com/"
    }
  ],
  "components": {
    "schemas": {
      "allPlayers": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/player"
        }
      },
      "allGuilds": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/guild"
        }
      },
      "bgkeep": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string",
            "example": "Thidranki Faste"
          },
          "currentRealm": {
            "type": "string",
            "example": "Albion",
            "enum": [
              "Albion",
              "Midgard",
              "Hibernia",
              "None"
            ]
          },
          "underSiege": {
            "type": "integer",
            "example": 0,
            "enum": [
              0,
              1
            ]
          }
        }
      },
      "bgkeeps": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/bgkeep"
        }
      },
      "df": {
        "type": "string",
        "enum": [
          "Albion",
          "Midgard",
          "Hibernia"
        ],
        "example": "Midgard"
      },
      "guild": {
        "type": "object",
        "required": [
          "Name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "Clan Cotswold"
          },
          "realmID": {
            "type": "integer",
            "example": 1
          },
          "realm": {
            "type": "string",
            "example": "Albion",
            "enum": [
              "Albion",
              "Midgard",
              "Hibernia"
            ]
          },
          "emblem": {
            "type": "integer",
            "example": 0
          },
          "realmPoints": {
            "type": "integer",
            "example": 77845992
          },
          "bountyPoints": {
            "type": "integer",
            "example": 24669
          },
          "members": {
            "type": "integer",
            "example": 123
          }
        }
      },
      "keep": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string",
            "example": "Arvakr Faste"
          },
          "originalRealm": {
            "type": "string",
            "example": "Midgard",
            "enum": [
              "Albion",
              "Midgard",
              "Hibernia"
            ]
          },
          "currentRealm": {
            "type": "string",
            "example": "Albion",
            "enum": [
              "Albion",
              "Midgard",
              "Hibernia",
              "None"
            ]
          },
          "claimingGuild": {
            "type": "string",
            "example": "Cotswold Clan"
          },
          "Level": {
            "type": "integer",
            "example": 4
          },
          "underSiege": {
            "type": "integer",
            "example": 0,
            "enum": [
              0,
              1
            ]
          }
        }
      },
      "news": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/newsEntry"
        }
      },
      "newsEntry": {
        "type": "object",
        "properties": {
          "Date": {
            "type": "string",
            "example": "27-05-2022 04:37 AM"
          },
          "Type": {
            "type": "string",
            "example": "RvR",
            "enum": [
              "RvR",
              "PlayerRP",
              "PlayerXP"
            ]
          },
          "Realm": {
            "type": "string",
            "example": "Albion",
            "enum": [
              "Albion",
              "Midgard",
              "Hibernia",
              "None"
            ]
          },
          "Text": {
            "type": "string",
            "example": "The forces of Albion have captured Dun Crauchon!"
          }
        }
      },
      "player": {
        "type": "object",
        "required": [
          "Name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "Player"
          },
          "lastname": {
            "type": "string",
            "example": "Lastname"
          },
          "guild": {
            "type": "string",
            "example": "Atlas"
