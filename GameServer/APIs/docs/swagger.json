    "/realm/bg": {
      "get": {
        "tags": [
          "realm"
        ],
        "summary": "/realm/bg",
        "description": "Returns the status of battle ground keeps <br><br>[cache 1 min]",
        "operationId": "getBGStatus",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
