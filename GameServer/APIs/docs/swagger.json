        "operationId": "getTopGuilds",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/allGuilds"
                }
              }
            }
          }
        }
      }
    },
